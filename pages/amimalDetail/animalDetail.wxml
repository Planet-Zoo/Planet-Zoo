<view class="animalFile">
  <view class="photoTextWrapper">
    <image class="photo" src="/img/NPC/{{name}}.png"></image>
    <view class="textWrapper">
      <view class="simpleTitle1"><text class="titleText">基础档案</text></view>
      <view>[姓名] {{name}}</view>
      <view>[性别] {{sex}}</view>
      <view>[种族] {{specie}}</view>
      <view>[生日] {{birthday}}</view>
      <view>[工作时间] {{workTime}}</view>
    </view>
  </view>
  <view>
    <view class="simpleTitle2"><text class="titleText">工作履历</text></view>
    <view class="storyWrapper"> {{workExpe}}</view>
    <view class="simpleTitle2"><text class="titleText">趣闻轶事</text></view>
    <view class="storyWrapper"> {{funStory}}</view>
  </view>
</view>